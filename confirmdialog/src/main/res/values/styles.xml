<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="windowFixedHeightMajor">95%</item>
        <item name="windowFixedHeightMinor">95%</item>
    </style>

    <style name="button_disable_flat" parent="TextAppearance.AppCompat.Button" >
        <item name="android:background">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="button_primary_flat" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>